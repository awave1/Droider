<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:background="@color/main_bg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_above="@+id/podcastName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                android:src="@drawable/dr_cast" />

            <TextView
                android:id="@+id/podcastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:text="ЛуДший I/O и Грозный Спилберг | Droider Cast #63–64"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:background="@drawable/main_background_gradient">

            <RelativeLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">

                <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/cardTitleTint_dark"
                    app:data_type="_long"/>

                <ImageButton
                    android:id="@+id/controlButton"
                    android:layout_width="@dimen/play_size"
                    android:layout_height="@dimen/play_size"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/play_button"
                    android:elevation="7dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/play"
                    android:translationZ="2dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/ic_share"
                    android:layout_marginBottom="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>
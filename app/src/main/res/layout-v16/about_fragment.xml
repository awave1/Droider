<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/AverageHorizontalMargin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/about_fragment_shortInformation_about"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp" />

        <TextView
            style="@style/AverageHorizontalMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/about_fragment_description"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            style="@style/AverageHorizontalMargin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/about_fragment_authors_about"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/droider_ru_authors_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            style="@style/AverageHorizontalMargin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/about_fragment_devs_about"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/droider_app_authors_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <!--todo: Make Material image little joke-->
        <!--  <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:adjustViewBounds="true"
              android:src="@drawable/footer" />-->

        <!-- Margin below Transparent Navigation Bar -->
        <include layout="@layout/transparent_navigation_bar_view"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>